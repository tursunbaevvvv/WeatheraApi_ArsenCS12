<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"    >
    <EditText
        android:id="@+id/edit_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:hint="Введите имя города"
        android:textSize="36sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
        android:id="@+id/good_weather_sky"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/image_sky"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/bad_weather_sky"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/image_bad_weather_sky"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="72dp"
        android:src="@drawable/building_bigger"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginStart="360dp"
        android:layout_marginTop="108dp"
        android:src="@drawable/sunn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="84dp"
        android:src="@drawable/clouds"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/bad_weather_cloud1"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="52dp"
        android:src="@drawable/cloud_bad_weather01"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView        android:id="@+id/bad_weather_cloud2"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginStart="172dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/cloud_bad_weather02"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="386dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#FFEB3B">
    <TextView
        android:id="@+id/current_time"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:text="8 авг 2025г 12:45:04"
        android:textColor="#9711AE"
        android:textSize="22sp"
        android:textStyle="bold"            />
    <TextView
        android:id="@+id/txt_name_sity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="London"
        android:textSize="24sp"
        android:layout_marginStart="10dp"/>
    </LinearLayout>
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="320dp"
        android:layout_marginTop="312dp"
        android:src="@drawable/office_building_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="172dp"
        android:layout_marginTop="296dp"
        android:src="@drawable/office_building_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="304dp"
        android:src="@drawable/office_building_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="432dp"
        android:background="@color/teal_200"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="26dp"
            android:layout_height="22dp"
            android:src="@drawable/humidity"            />
        <TextView
            android:id="@+id/humidityPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 %"
            android:textColor="#152DB3"
            android:textSize="36sp" />
        <TextView
            android:id="@+id/gradus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="35"
            android:textColor="#1AA820"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_marginStart="14dp"/>
        <ImageView
            android:layout_width="46dp"
            android:layout_height="42dp"
            android:src="@drawable/degree"
            />

    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_show"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_gravity="end"
        android:layout_marginStart="288dp"
        android:layout_marginTop="480dp"
        android:text="Показать погоду"
        app:cornerRadius="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
